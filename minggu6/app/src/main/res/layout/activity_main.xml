<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write Data To SD card"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/etNamaFile"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="nama file (contoh.txt)" />

    <EditText
        android:id="@+id/etIsiFile"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:hint="@string/add_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buat file"
        android:layout_gravity="center"
        android:onClick="buatFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baca Data"
        android:layout_gravity="center"
        android:onClick="bacaData"/>

</LinearLayout>